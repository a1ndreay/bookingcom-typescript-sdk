{
    "openapi":"3.0.3",
    "info": {
      "title":"OpenAPI spec for booking service",
      "version":"1.0.1"
    },
    "servers": [
      {"url":"https://api.server.test/v1"}
    ],
    "paths": {
        "/hotels": {
            "get": {
                "description": "Returns a hotels feed.",
                "operationId": "listHotelsRequest",
                "summary": "Get list of hotels.",
                "parameters": [
                    {
                        "in": "query",
                        "name": "stars",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 5
                        },
                        "description": "fetch hotels by stars"
                    },
                    {
                        "in": "query",
                        "name": "rating",
                        "schema": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 10.0
                        }
                    },
                    {
                        "in": "query",
                        "name": "minCost",
                        "schema": {
                            "type": "number",
                            "minimum": 0
                        }
                    },
                    {
                        "in": "query",
                        "name": "maxCost",
                        "schema": {
                            "type": "number",
                            "minimum": 0
                        }
                    },
                    {
                        "in": "query",
                        "name": "city",
                        "schema": {
                            "type": "string",
                            "minLength": 3
                        }
                    },
                    {
                        "in": "query",
                        "name": "country",
                        "schema": {
                            "type": "string",
                            "minLength": 3
                        }
                    },
                    {
                        "in": "query",
                        "name": "onlyFavourite",
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "in": "query",
                        "name": "page_token",
                        "schema": {
                            "type": "string"
                        },
                        "description": "returned by a previous list request to get the next page of results."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ListHotelsResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/hotels/{hotelId}/favourite": {
            "post": {
                "description": "Add hotel to favourite",
                "operationId": "postHoteltoFavoriteRequest",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "delete": {
                "description": "Remove hotel from favourite",
                "operationId": "deleteHotelfromFavouriteRequest",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/hotels/{hotelId}": {
            "get": {
                "description": "Get specified hotel",
                "operationId": "getHotelRequest",
                "parameters": [
                    {
                        "in": "path",
                        "name": "hotelId",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "description": "unique identifier of the specified hotel."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GetHotelResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ListHotelsResponse": {
                "type": "object",
                "title": "ListHotelsResponse",
                "properties": {
                    "hotels": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "hotelName": {
                                    "type": "string"
                                },
                                "hotelId": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "isFavourite": {
                                    "type": "boolean"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "stars": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "maximum": 5
                                },
                                "rating": {
                                    "type": "number",
                                    "minimum": 0.0,
                                    "maximum": 10.0
                                }
                            }
                        }
                    },
                    "next_page_token": {
                        "type": "string"
                    }
                }
            },
            "GetHotelResponse":{
                "type": "object",
                    "properties": {
                        "hotelName": {
                            "type": "string"
                        },
                        "hotelId": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "isFavourite": {
                            "type": "boolean"
                        },
                        "description": {
                            "type": "string"
                        },
                        "pageRenderToken": {
                            "type": "string",
                            "description": "ref token to fetch the hotel page"
                        },
                        "stars": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 5
                        },
                        "rating": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 10.0
                        },
                        "photos": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
            }
        }
    }
  }